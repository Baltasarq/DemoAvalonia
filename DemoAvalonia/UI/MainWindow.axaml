            <Button Name="BtFifth"
                    Content="Fifth"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center" />
            
            <ComboBox Name="CbOptions"
                      Margin="5"
                      HorizontalAlignment="Stretch"
