        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" Name="OpExit" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Simple panel" Name="OpSimplePanel" />
                <MenuItem Header="S_tack panel" Name="OpStackPanel" />
